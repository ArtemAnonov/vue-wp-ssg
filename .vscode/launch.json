{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/html/wp-content/themes/logotype-ssr/vue-vite-ssg/src",

        },
        
        {
            "name": "B",
            "type": "php",
            "request": "launch",

            // "hostname": "localhost",
            // "port": 9003,
            "pathMappings": {
                "/var/www/html/": "${workspaceFolder}/html/"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ],
            // "log": true
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "F",
            "port": 9222,
            "enableContentValidation": false,
            "webRoot": "${workspaceFolder}/html/wp-content/themes/logotype-ssr/vue-vite-ssg/src",
            "urlFilter": "http://localhost:*",
            // "sourceMapPathOverrides": {

            // }
        },
        {
            "type": "node",
            "name": "JavaScript Debug Terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/html/wp-content/themes/logotype-ssr/vue-vite-ssg"
        }
    ]
}